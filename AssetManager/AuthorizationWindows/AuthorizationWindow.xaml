<Window x:Class="AssetManager.AuthorizationWindows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:authControls="clr-namespace:AssetManager.AuthorizationWindows"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Авторизация">
                <authControls:SignInControl/>
            </TabItem>
            <TabItem Header="Регистрация">
                <authControls:RegisterControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
