<Window x:Class="AssetManager.Authorization.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:authorization="clr-namespace:AssetManager.Authorization"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Авторизация">
                <authorization:SignInControl/>
            </TabItem>
            <TabItem Header="Регистрация">
                <authorization:RegisterControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
