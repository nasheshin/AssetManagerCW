<Window x:Class="AssetManager.Authorization.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:authorization="clr-namespace:AssetManager.Authorization"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <TabControl>
            <TabItem Header="Авторизация">
                <Border Background="GhostWhite" BorderBrush="Gray" BorderThickness="1">
                    <authorization:SignInControl  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </TabItem>
            <TabItem Header="Регистрация">
                <Border Background="GhostWhite" BorderBrush="Gray" BorderThickness="1">
                    <authorization:RegisterControl HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
